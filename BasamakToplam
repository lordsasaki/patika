package projeler;

import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		
		System.out.print("Sayi giriniz: ");
		int sayi = scan.nextInt();
		int total =0;
		while(sayi!=0)
		{
			total += sayi%10;
			sayi/=10;
		}
		System.out.print(total);
	}
}
