package projeler;

import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		int toplam =0;
		Scanner scan = new Scanner(System.in);
		
		System.out.print("Sayi Giriniz");
		int sayi = scan.nextInt();
		
		for (int i = 0; i < sayi; i++) {
			if((i%3 ==0) && (i%4==0))
				toplam+=i;
		}
		System.out.print("Toplam: "+toplam);

	}
}
