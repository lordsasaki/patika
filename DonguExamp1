package projeler;

import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		int toplam =0;
		int sayi;
		Scanner scan = new Scanner(System.in);
		
		while(true)
		{
			System.out.print("Sayi Giriniz");
			sayi = scan.nextInt();
			
			if(sayi%2 ==1)
				break;
			else if(sayi%4==0)
				toplam+=sayi;
		}
		System.out.println("Girilen Sayilarin Toplami = "+toplam);
	}
}
